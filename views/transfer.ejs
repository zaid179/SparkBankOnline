<body>
  
  <header id="header" class="header fixed-top">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

      <a href="/" class="logo d-flex align-items-center">
        <img src="img/logo.png" alt="">
        <span>Spark Bank</span>
      </a>

      <nav id="navbar" class="navbar">
        <ul>
          <li><a class="nav-link scrollto active" href="/">Home</a></li>         
          
        </ul>
          
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->
<div class = "tran hero">
<h1 id="tra" class="check">  <%= transfer %> </h1>
<br>
<br>
<form action="/transfer" method="post" autocomplete="off">
        <table class="table table-borderless">
         <tr>
           <td>
            <label> <h5>Select Sender:  </h5> </label>
           </td>
           <td>
            <select class="form-select form-select-sm" name="sender" required>
              <option value=""></option>
            <option value="Duck">Duck</option>
            <option value="Sam">Sam</option>
            <option value="Joe">Joe</option>
            <option value="Sami">Sami</option>
            <option value="James">James</option>
                    
            </select>
           </td>
         </tr>
         <br>
         <br>
         <tr>
            <td>
              <label> <h5> Select Reciever: </h5> </label>
            </td>
            <td>
              <select class="form-select form-select-sm" name="receiver" required>
                <option value=""></option>
                <option value="Duck">Duck</option>              
                <option value="Sam">Sam</option>
                <option value="Joe">Joe</option>
                <option value="Sami">Sami</option>
                <option value="James">James</option>
                   
            </select>
            </td>
         </tr>
         <tr>
           <td> <h5>Enter Amount:</h5></td>
           <td>
            <div class="input-group input-group-sm mb-3">
              <input type="number" min="1" name="amount" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" required>
            </div>
            
            
           </td>
         </tr>
          <tr>
            <td></td>
            <td><button type="submit" class="btn btn-success btn-lg"> Transfer </button> </td>
            <td><button class="btn btn-light btn-lg "><a href="/">&laquo;</a></button></td>
          </tr>
        </table>             
            
    </form>
  </div>


<%- include('footer') -%>
